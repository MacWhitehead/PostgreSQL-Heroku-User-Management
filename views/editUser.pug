html
    head 
    title Edit User Data
    body
        p= `Editing details for user: ${user.id}`
        form(method="post" action='/userEdited/' + user.id)
            div
                label(for='first_name') First Name: 
                input(id="first_name" name="first_name" value=user.first_name)
            div
                label(for='last_name') Last Name: 
                input(id="last_name" name="last_name" value=user.last_name)
            div
                label(for='email') Email: 
                input(id="email" name="email" value=user.email)
            div
                label(for='age') Age: 
                input(id="age" name="age" value=user.age)
            div 
                input(type="submit")